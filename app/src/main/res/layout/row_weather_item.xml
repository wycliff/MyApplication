<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dr_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/vendor_type_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:contentDescription="@+id/image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_van_icon" />

    <TextView
        android:id="@+id/tv_reg_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:letterSpacing="0.03"
        app:layout_constraintEnd_toStartOf="@+id/tv_valid_vehicle"
        app:layout_constraintStart_toEndOf="@+id/vendor_type_icon"
        app:layout_constraintTop_toTopOf="@+id/vendor_type_icon"
        tools:text="KCJ 589D" />

    <TextView
        android:id="@+id/tv_vendor_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:letterSpacing="0.03"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="@+id/vendor_type_icon"
        app:layout_constraintStart_toStartOf="@+id/tv_reg_no"
        app:layout_constraintTop_toBottomOf="@+id/tv_reg_no"
        app:layout_constraintVertical_bias="0.514"
        tools:text="Truck"
        app:layout_constraintEnd_toEndOf="@+id/tv_reg_no" />


    <TextView
        android:id="@+id/tv_valid_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="2dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        app:layout_constraintBottom_toBottomOf="@+id/tv_vendor_type"
        app:layout_constraintEnd_toStartOf="@+id/btn_manage_vehicle"
        app:layout_constraintTop_toTopOf="@+id/tv_reg_no" />

    <ImageView
        android:id="@+id/btn_manage_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/image"
        app:layout_constraintBottom_toBottomOf="@+id/tv_valid_vehicle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_valid_vehicle"
        app:srcCompat="@drawable/ic_arrow_right"
        app:tint="@color/colorPrimary" />


</androidx.constraintlayout.widget.ConstraintLayout>